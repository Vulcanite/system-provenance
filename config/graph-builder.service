[Unit]
Description=Graph Builder Service
After=network.target elasticsearch.service neo4j.service

[Service]
Type=simple
WorkingDirectory=/root/system-provenance/web
ExecStart=/root/system-provenance/web/venv/bin/python graph_builder.py
Restart=always
RestartSec=5s
User=root
Group=root
Environment="PATH=/root/system-provenance/web/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

[Install]
WantedBy=multi-user.target